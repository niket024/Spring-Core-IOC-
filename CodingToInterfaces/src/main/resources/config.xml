<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   
	<bean class="com.nik.Triangle" id="triangle">
		<property name="pointA" ref="pointA"></property>
		<property name="pointB" ref="pointB"></property>
		<property name="pointC" ref="pointC"></property>
	</bean>

	<bean class="com.nik.Circle" id="circle">
		<property name="center" ref="center"></property>
	</bean>

	<bean class="com.nik.Point" id="pointA">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean class="com.nik.Point" id="pointB">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean class="com.nik.Point" id="pointC">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean class="com.nik.Point" id="center">
		<property name="x" value="10"></property>
		<property name="y" value="10"></property>
	</bean>
</beans>